# مرحلة البناء
FROM rust:alpine

# تثبيت الحزم الضرورية
RUN apk add --no-cache musl-dev openssl-dev pkgconfig build-base

WORKDIR /app

# نسخ ملفات المشروع
COPY . .

# بناء المشروع
RUN cargo build --release


# تثبيت فقط المكتبات الضرورية للتشغيل
RUN apk add --no-cache openssl

WORKDIR /app

# نسخ الباينري فقط من مرحلة البناء
COPY --from=builder /app/target/release/websocket_candle_rust .

CMD ["./websocket_candle_rust"]
